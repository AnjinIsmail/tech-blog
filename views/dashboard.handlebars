<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-url">Content</label>
            <textarea id="post-url" name="post-url"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</section>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">


            {{!-- <div class="post-preview"> --}}

                {{#if posts.length}}
                <section>
                    <h2>Your Posts</h2>
                    <hr>
                    <div class="post-preview">
                        {{#each posts as |post|}}
                        <a href="/post/{{post.id}}">
                            <h2 class="post-title">
                                {{post.title}} </h2>
                            <h3 class="post-subtitle">
                                ({{post.content}}) </h3>
                        </a>
                        <p class="post-meta">Posted by
                            <a href="#">{{user.username}}</a>
                            {{format_date created_at}}
                        </p>
                        <p class="post-meta">
                            <a href="/post/{{post.id}}">{{comments.length}} {{format_plural "comment"
                                comments.length}}</a>
                        </p>
                        <a href="/dashboard/edit/{{post.id}}" class="btn btn-success">Edit post</a>
                        <hr>




                        {{/each}}
                    </div>
                </section>
                {{/if}}

            </div>
        </div>
    </div>
</div>
<script src="/javascript/add-post.js"></script>

<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>

